<% columns = [{:type => 'html', :class => "first"}, {:type => 'html'}, {:type => 'html'}, {:type => 'html'}, {:type => 'html'}, {:type => 'html'}, {:type => 'html'}, {:type => nil, :class => "last"},] %>
<%= raw datatable(columns, {:sort_by => "[6, 'desc']", :processing => image_tag("spinner.gif") }) %>
<h2>
  Showing all events for user with phone number '<%= @user.phone_number %>'
</h2>

<table id='events' class='datatable'>
  <thead>
    <tr>
      <th>Events Name</th>
      <th>Notes</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th></th>
      <th></th>
      <th></th>
      <th style="display:none;"></th>
    </tr>
  </thead>
  <tbody>
    <% @event_content_pairs.each do |event, content| %>
      <tr>
	<td><%= content['name'] %></td>
	<td><%= content['notes'] %></td>
	<td><%= content['startTimeR'] %></td>
	<td><%= content['endTimeR'] %></td>
	<td><%= link_to 'Map', "/events/map/#{event.id}" %></td>
	<td><%= link_to 'Edit', edit_event_path(event) %></td>
	<td><%= link_to 'Delete', event, :confirm => 'Are you sure?', :method => :delete, :phone_number => @user.phone_number %></td>
	<td style="display:none;"><%= content['startTime'] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
